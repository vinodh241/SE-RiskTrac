.applyFilter button, .applyFilter button:focus {
    width: 15vh;
    min-height: 3.5vh;
    height: 4.5vh;
    padding: 0.3vh 0.6vw;
    box-shadow: 0.3vh 0.4vh 0.4vh 0px rgba(0, 0, 0, 0.28);
    border-left: 2vw solid #000;
    border-right: none;
    border-top: none;
    border-bottom: none;
    transition: width 2s;
    border-radius: 0.5vh;
    color: white;
}

.iconPositionLeft {
    left: 92.2vw !important;
    position: absolute;
}
/* Base styles for buttons */
.move-buttons .buttons {
    display: flex;
    justify-content: space-around;
    align-items: center;
    cursor: pointer;
    margin: 0.5em;
    width: 6vw;
    padding: 0.5em;
    border-radius: 0.3em;
    color: #fff;
    background: linear-gradient(45deg, rgba(29, 160, 79, 0.8), rgba(11, 89, 161, 0.8));
    outline: none;
    border: none;
    filter: drop-shadow(0px 5px 4px rgba(0, 0, 0, 0.5));
    opacity: 1;
    transition: opacity 0.3s ease, background-color 0.3s ease;
}

/* Specific styles for the 'save' button */
.move-buttons .buttons.save {
    justify-content: center;
    background: #0b5ed7;
}

/* Disabled state */
.move-buttons .buttons:disabled {
    background: #cccccc; /* Gray background */
    color: #666666;      /* Muted text color */
    cursor: not-allowed; /* Unclickable cursor */
    opacity: 0.7;        /* Slight transparency for visual cue */
    filter: none;        /* Remove drop-shadow for disabled state */
}
