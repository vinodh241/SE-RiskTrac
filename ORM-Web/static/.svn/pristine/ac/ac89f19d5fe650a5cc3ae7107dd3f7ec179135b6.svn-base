.tblContent thead th {height: 5.2vh; background-color: #E7E7E7; border: 1px solid #fff; color: #000; font-weight: 600; padding: 0.4vh 0.2vw; vertical-align: top; line-height: 1.1;}
.tblContent thead th div {font-weight: 600;}
.tblContent thead th:last-child {border: none;}
.tblContent.colorBlueHead thead th {background-color: #99bcc6; border: none;}

.tblContent tbody td {padding: 0.6vh 0.2vw; font-weight: 300; }
.tblContent tbody tr {border-bottom: 1px solid #E7E7E7; transition: 0.3s;}
.tblContent tbody tr:nth-child(even) {background-color: #e7e7e76d;}
.tblContent tbody tr:hover, .tblContent tbody tr.active {background-color: #bce8ffa7;}

.tblContent tbody tr td.tableArrow span  {display: none; right: 3%; color: #9d9d9d;}
.tblContent tbody tr:hover td.tableArrow span, .tblContent tbody tr.active td.tableArrow span  {display: block;}

.tblContent.tbleSP tbody td {vertical-align: top;}
.tblContent.tbleSP tbody td abbr {font-weight: 600;}
.tblContent tbody td:last-child img {width: 1em; margin-right: 8%; cursor: pointer;}
a.tblLnk {color: #007bff; text-decoration: underline;}

.tbleFilter {top: 5%; right: -1.2%; cursor: pointer;}
