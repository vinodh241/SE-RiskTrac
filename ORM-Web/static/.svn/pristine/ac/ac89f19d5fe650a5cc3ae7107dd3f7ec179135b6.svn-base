.modalTble.seablueTble thead th, .modalTble.seablueTble tbody td {padding-inline: 0.3vw; line-height: 1.1;}
.modalTble.seablueTble thead th {background-color: #99bcc6; font-weight: 600;}
/* .modalTble.seablueTble tbody td {vertical-align: top;} */
