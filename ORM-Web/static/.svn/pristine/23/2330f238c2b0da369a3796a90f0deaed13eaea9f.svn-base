.action-plan-disp {
    align-items: flex-start;
    overflow-y: auto;
    height: 30%; /* Adjusted height to 12vh */
    width: 178px;
  }

  .file-upload-disp {
    align-items: flex-start;
    overflow-y: auto;
    height: 40%; /* Adjusted height to 10vh */
    width: 178px;
  }

  .action-input {
    width: 100%;
    height: 30%;
    border: 1px solid #d4d4d4;
    resize: vertical;
    border-radius: 5px;
    padding: 5px;
    box-sizing: border-box;
    margin-bottom: 5px; /* Added margin-bottom to create spacing */
  }

  .disable {

    opacity: 0.3;

    pointer-events: none;

  }

  .popFormandate{
    position: relative;
  }

  .popFormandateInner{
    background: rgba(0,0,0,0.8);
    color: white;
    padding: 5px 10px;
    position: absolute;
    width: 15vh;
    display: flex;
    flex-direction: column;
    bottom: 25px;
    border-radius: 4px;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease-in-out;
    font-size: 1.5vh;
    line-height: 2.2vh;
  }
  .popFormandate:hover .popFormandateInner{
    opacity: 1;
    visibility: visible;
    transition: all 0.2s ease-in-out;
  }
  .popFormandate:hover .popFormandateInner{
    opacity: 1;
    visibility: visible;
    transition: all 0.2s ease-in-out;
  }
  .popFormandate input:focus ~ .popFormandateInner{
    opacity: 1;
    visibility: visible;
    transition: all 0.2s ease-in-out;
  }

  .modalColorBtn:disabled {
    background-color: #cccccc !important;; /* Light gray background */
    color: #666666 !important; /* Muted text color */
    cursor: not-allowed; /* Unclickable cursor */
    opacity: 0.7; /* Slight transparency for disabled state */
}
