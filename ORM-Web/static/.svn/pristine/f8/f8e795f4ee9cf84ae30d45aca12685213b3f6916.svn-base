// }

.mat-column-Reviewer,
.mat-column-Units,
.mat-column-RAFPolicyApplied {
    max-width: 15vw;
}

.mat-column-Status {
    max-width: 10vw;
}

.mat-column-XlsFile {
    max-width: 6vh;
}
.mat-column-PdfFile {
    max-width: 7vh;
    border: none !important;
}

.mat-column-Quarter,
.mat-column-Action {
    max-width: 8vh;
}
.mat-header-cell {
    border-right: 1px solid #fff;
    background-color: #E7E7E7;
}

 .mat-cell{
    border-right: 1px solid #eee;
    padding: 0 5px !important;
 }

 .mat-sort-header-content {
    text-align: center;
    display: flex;
    align-items: center;
    margin-left: 1vh;
}
