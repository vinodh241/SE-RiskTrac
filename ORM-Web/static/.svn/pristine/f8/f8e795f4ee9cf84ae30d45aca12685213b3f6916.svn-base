.mat-elevation-z8 {
    margin: 0vh 4vh 0 4vh;
}

.mat-action-row {
    margin: 0vh 4vh 0 4vh;
}

.mat-header-row {
    min-height: 10vh;
}

.mat-header-cell,
.mat-cell {
    border-right: 1px solid #eee;
    padding: 0 5px;
}

.mat-column-Index {
    max-width: 2vw;
    justify-content: center;
}

.mat-column-FrameworkName {
    max-width: 15vw;
}

.mat-column-StartDate,
.mat-column-EndDate {
    max-width: 7vw;
}

// .mat-column-Reviewer {
