<div>
    <h1 style="font-weight: bold;">Comments</h1>
    <mat-card>
        <mat-form-field class="comments-input">
            <mat-label> Enter Comments for Submission </mat-label>
            <textarea matInput placeholder="comments" cols="10" rows="8" [(ngModel)]="comment" style="resize: none"></textarea>
        </mat-form-field>
    </mat-card>
    <div class="example-button-row">
        <button mat-raised-button  color="primary" (click)="submit()" [disabled]="!comment" class="submiting">Submit</button>
        <button mat-button cdkFocusInitial mat-dialog-close >Cancel</button>
    </div>
</div>