<mat-toolbar style="width: auto; margin:-24px -24px 0px -24px; height: 8.5vh; font-size: 2vh;">
    <h2>Upload {{parent.evdname}} Evidence</h2>
    <span class="spacer"></span>
    <div mat-dialog-actions class="button-container">
        <button mat-icon-button title="close" cdkFocusInitial mat-dialog-close>
            <mat-icon aria-hidden="false" aria-label="Close" fontIcon="close"></mat-icon>
        </button>
    </div>
</mat-toolbar>
<div class="mat-elevation-z8">
    <form autocomplete="off" class="example-form">
        <mat-form-field class="" appearance="fill">
            <mat-label>{{parent.evdname}} Evidence <span>(Allowed file type - ".xlsx", ".pdf", ".docx", ".jpeg", ".jpg", ".png", ".eml")</span></mat-label>
            <input matInput placeholder="Choose file" onclick="document.getElementById('uploadEvidence').click();"
                [value]="filename" readonly="readonly" required>
            <input class="form-control" id="uploadEvidence" type="file" [(ngModel)]="uploadFilename"
                name="Evidence File" (onFileSelected)="getEvidenceDetails()" ng2FileSelect [uploader]="uploader"
                style="display: none;" />
        </mat-form-field>

      

        <mat-form-field appearance="fill" *ngIf="parent.evdname != 'Recommendation'">
            <mat-label> Remarks *</mat-label>
            <input type="text" [(ngModel)]="remarks" name="remarks" matInput (blur)="onRemark($event)"
                placeholder="Remarks">
        </mat-form-field>

        <div *ngIf="submitted && remarkError">
            <mat-error *ngIf="submitted && remarkError">Enter Remarks</mat-error>
        </div>

        <!-- <mat-form-field appearance="fill">
            <mat-label for="evidenceId"> Evidence Id *</mat-label>
            <input type="number" (blur)="onEvidenceId($event)" [(ngModel)]="evidenceNumber" name="evidenceNumber"
                id="evidenceId" matInput placeholder="Id number">
        </mat-form-field>

        <div *ngIf="submitted && evidenceIdError">
            <mat-error *ngIf="submitted && evidenceIdError">Enter Evidence Id</mat-error>
        </div> -->
        <div *ngIf="invalidfile" style="color: red;margin-right: 2vh;"> Invalid file extension. <br> <span>Please attach file with ".xlsx", ".pdf", ".docx", ".jpeg", ".jpg", ".png", ".eml" extension.</span>
        </div>
        <div *ngIf="invalidfilesize" style="color: red;margin-right: 38vh;"> File Size should be less than 10MB.</div>
        <div *ngIf="validFileNameErr" style="color: red;margin-right: 29vh;"> Special characters are not allowed in File name.</div>

        <div class="example-button-row">
            <span class="spacer"></span>
            <!-- <button mat-raised-button color="primary" [disabled]="invalidfile || invalidfilesize || validFileNameErr"
                (click)="validateSave()">Upload File</button> -->
             
                <mat-error *ngIf="uploaderror" style="margin-right: 29vh;">{{uploaderror}}</mat-error>

                <button mat-raised-button color="primary" [disabled]="invalidfile || invalidfilesize || validFileNameErr" style="margin-right: 1vh;"
                (click)="validateSave()"><img src="./assets/images/icon-upload.svg" style="margin-right: 0.2vw;width: 21%;    margin-bottom: 1vh;" alt="upload"/>Upload File</button>
            <!-- <button mat-button mat-dialog-close (click)="cancel()">Cancel</button> -->
            <button type="button" class="btn btn-secondary modalCancelBtn" id="cancel" style="margin-right: 1vh" (click)="cancel()">Cancel</button>
        </div>
    </form>
</div>
