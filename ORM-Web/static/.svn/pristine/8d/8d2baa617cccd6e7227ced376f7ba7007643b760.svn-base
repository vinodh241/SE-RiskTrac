.mat-tool-bar {
    width: 100%;
    display: flex;
    justify-content: end;
    align-items: center;
}

::ng-deep.mat-dialog-container {
    padding: 0px;

}
.no-data {
    margin-top: 20px;
    width: 100%;
    text-align: center;
    font-size: 3vh;
}


.mat-table-padding {
    margin-top: 20px;
    margin-left: 20px;
    margin-right: 20px;
    margin-bottom: 20px;
}

// ::ng-deep.mat-elevation-z8 {
//     box-shadow: none;
// }

::ng-deep.mat-table {
    overflow-x: scroll;
}

::ng-deep.mat-header-row{
    position: sticky;
    top: 0;
    z-index: 100;
}

table {
    width: 100%;
}
.viewAll{
    color: #1b61d1;
    cursor: pointer;
}
.mat-column-kriCode{
    width: 8vw;

}
.mat-column-id{
    width:3vw;
}
.mat-column-kriValue{
    width: 3vw;
}
.mat-column-date,
.mat-column-period{
    width: 5vw;
}
.mat-column-unit{
    width: 8vw;
}
.mat-column-remarks {
    width: 10vw;
}

.example-container {
    height: 55.7vh;
    max-width: 100%;
    overflow: auto;
}

.mat-row:nth-child(even){
    background-color: rgb(233, 233, 230);
    // height: 10px;
}
        
.mat-row:nth-child(odd){
    background-color: rgb(225, 223, 223);
    // height: 10px;
}


.bottom-dig{
    background-color: #e7e7e7;
    padding: 20px;
    display: flex;
    align-items: center;
    justify-content: right;
    height: 45px;
}
.bottom-dig button{
    background-color: #c9c9c9;
    color: black;
    border-radius: 0px;
    border: 0px;
    box-shadow: 0px 1px #777777;
    overflow: hidden;
}

.mat-row:nth-child(even):hover,
.mat-row:nth-child(odd):hover
 {
    background-color: #fffdeb;
  }

