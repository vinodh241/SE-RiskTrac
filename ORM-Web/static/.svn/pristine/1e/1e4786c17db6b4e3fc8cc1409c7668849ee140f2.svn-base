.divORCSA{
    background-color: #F2F2F2;
    border-radius: 8px;
    margin: 5px 0px 0px;
    box-shadow: 0px 2px 1px -1px rgba(0, 0, 0, 0.2), 0px 1px 1px 0px rgba(0, 0, 0, 0.14), 0px 1px 3px 0px rgba(0, 0, 0, 0.12);
} 
.mainSectionForORCSA{
    height: 100%;
    overflow: hidden;
}
.mainSectionForORCSAInner{
    overflow: auto;
    height: calc(100% - 70px);
    padding: 0px 10px 10px;
}
.maincard {
    display: flex;
    align-items: center;
    justify-content: center;
    
}
.maincard .chartcard{
    width: 100%;
    height: 100px;
    margin: auto;
    background-image: linear-gradient(#fff, #D5D5D5);
    border-radius: 10px;
    box-shadow: 0px 1px 6px 1px #c4c4c4;
    position: relative;
    display: flex;
    align-items: center;
}
.maincard .chartcard .riskbutton {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
}
.maincard .chartcard .mainButton{
    position: relative;
    height: 100%;
    width: 35px;
    display: flex;
    align-items: center;
    left: -5px;
}
.maincard .chartcard .mainButton .btnBg {
    width: 100%;
    height: 100%;
}
/* .maincard .chartcard .mainButton::before{
    content: '';
    width: 26px;
    position: absolute;
    background: #983344;
} */
.maincard .chartcard .riskbutton .riskBtn {
    background: transparent;
    color: #ffffff;
    text-transform: uppercase; 
    font-size: 10px;
    border: none;
    width: 80px;
    margin: 0px 0px 0px 0px;
    transform: rotate(-90deg);    
    font-family: Roboto Condensed;
}
.maincard .chartcard .carts{
    padding: 16px 4px 4px 0px;
    width: 100%;
    position: relative;
    z-index: 1;
}
.maincard .chartcard .carts .candals{
    display: flex;
    align-items: end;
    justify-content: space-between;
    border-bottom: 1px solid #0000009a;
    padding: 0px 5px;
}
.maincard .chartcard .carts .candals{
    height: 60px;
}
.maincard .chartcard .carts .candals .candal{
    display: flex;
    align-items: end;
    height: 100%;
}
.maincard .chartcard .carts .candals .candal span{
    cursor: pointer;
}
.maincard .chartcard .carts .candals .candal span{
    display: flex;
    width: 25px;
    height: 0%;
    transition: all 0.2s ease-in-out;
    border-radius: 4px 4px 0px 0px;
    border: 1px solid #B10000;
    background-color: #B10000;
}
.maincard .chartcard .carts .candals .candal.candal2 span{
    // height: 0px;
    border: 1px solid #FF6E05;
    background-color: #FF6E05;
}
.maincard .chartcard .carts .candals .candal.candal3 span{
    // height: 20px;
    border: 1px solid #0B9A45;
    background-color: #0B9A45;
}
.maincard .chartcard .carts .candalContent{
    display: flex;
    align-items: baseline;
    justify-content: space-between;
    padding: 0px 5px;
}
.maincard .chartcard .carts .candalContent .content{
    min-width: 25px;
    text-align: center;
    font-size: 14px;
    font-weight: 600;
    color: #292d29;
}

::-webkit-scrollbar {
    width: 9px; /* width of the scrollbar */
    height: 50px;
  }

  ::-webkit-scrollbar-track {
    background: #f1f1f1; /* color of the track (background) */
  }


  ::-webkit-scrollbar-thumb {
    background: rgb(218, 212, 212); /* color of the thumb (handle) */
    border-radius: 6px; /* adjust the value to control the curvature */
  }

  ::-webkit-scrollbar-thumb:hover {
    background: rgb(218, 212, 212); /* color of the thumb on hover */
  }

