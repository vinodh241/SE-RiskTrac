/* FFF */
.form-control {
  border-radius: 0.50vh;
  border: none;
}

.input-field {
  position: relative;
  line-height: 2.2;
  width: 100%;
}

.input-field label {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  color: #757575;
  transition: 0.2s all;
  cursor: text;
  padding: 0.5em 0.6em;
  font-size: 100%;
}

.input-field input {
  width: 100%;
  border: 0;
  outline: 0;
  padding: 0.5em 0.2em;
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.25);
  color: #111;
  background-color: #fff;
  border-radius: 0.3em;
}

.input-field input:invalid {
  outline: 0;
}

.input-field input:focus,
.input-field input:valid {
  box-shadow: 0px 2px 2px 0px rgba(0, 0, 0, 0.25);
}

.input-field input:focus~label,
.input-field input:valid~label {
  top: -1em;
  color: #1370DC;
  font-size: 70%;
}

.form-control:disabled,
.form-control[readonly] {
  opacity: 0.8;
}

