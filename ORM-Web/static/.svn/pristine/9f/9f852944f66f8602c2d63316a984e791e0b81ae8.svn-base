.radioRed {
  width: calc(100% / 3)
}

.radioRed input[type=radio]:checked,
.radioRed input[type=radio]:not(:checked) {
  position: absolute;
  left: -9999px;
  font-family: 'Roboto Condensed', sans-serif !important
}

.radioRed input[type=radio]:checked+label,
.radioRed input[type=radio]:not(:checked)+label {
  position: relative;
  cursor: pointer;
  line-height: 1;
  display: inline-block;
  color: #666;
  font-size: 1vw
}

.radioRed input[type=radio]:checked+label span,
.radioRed input[type=radio]:not(:checked)+label span {
  font-family: 'Roboto Condensed', sans-serif !important
}

.radioRed input[type=radio]:checked+label:before,
.radioRed input[type=radio]:not(:checked)+label:before {
  content: '';
  position: absolute;
  left: 50%;
  top: 125%;
  width: 1.4vw;
  aspect-ratio: 1/1;
  border: 1px solid #ddd;
  border-radius: 100%;
  background: #fff;
  transform: translateX(-50%)
}

.radioRed input[type=radio]:checked+label:after,
.radioRed input[type=radio]:not(:checked)+label:after {
  content: '\f058';
  left: 50%;
  top: 148%;
  width: 1vw;
  aspect-ratio: 1/1;
  color: #f06;
  background: #fff;
  position: absolute;
  border-radius: 100%;
  -webkit-transition: .2s;
  transition: .2s;
  transform: translateX(-50%);
  box-shadow: inset .1vh .1vh 0 .3vh #08080854
}

.radioRed input[type=radio]:not(:checked)+label:after {
  opacity: 0;
  -webkit-transform: scale(0);
  transform: scale(0)
}

.radioRed input[type=radio]:checked+label:after {
  opacity: 1
}

