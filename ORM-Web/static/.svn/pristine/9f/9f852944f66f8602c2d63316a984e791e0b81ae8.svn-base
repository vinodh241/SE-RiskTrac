.checkbox {
  width: 100%;
  position: relative;
  display: block;
}

.checkbox label {
  position: relative;
  min-height: 3vh;
  display: block;
  padding-left: 40px;
  margin-bottom: 0;
  font-weight: normal;
  cursor: pointer;
}

.checkbox label span {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.checkbox label:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 5vh;
  height: 5vh;
  transition: transform 0.28s ease;
  border-radius: 0.3em;
  border: 1px solid #737373;
  background-color: #FFC759;
}

.checkbox label:after {
  content: "";
  display: block;
  width: 1.5vh;
  height: 0.8vh;
  border-bottom: 2px solid #000;
  border-left: 2px solid #000;
  transform: rotate(-45deg) scale(0);
  transition: transform ease 0.25s;
  position: absolute;
  top: 61%;
  left: 28%;
}

.checkbox input[type=checkbox] {
  width: auto;
  opacity: 1e-8;
  position: absolute;
  left: 0;
  margin-left: -20px;
}

.checkbox input[type=checkbox]:checked~label:before {
  border: 1px solid #737373;
  background-color: #FFC759;
}

.checkbox input[type=checkbox]:checked~label:after {
  transform: rotate(-45deg) scale(1);
}

.checkbox input[type=checkbox]:focus+label::before {
  outline: 0;
}


.checkbox.checkwhite label:before {
  background-color: transparent;
  width: 3vh;
  height: 3vh;
}

.checkbox.checkwhite label:after {
  width: 1vh;
  height: 0.6vh;
  top: 36%;
  left: 9%;
}

.checkbox.checkwhite input[type=checkbox]:checked~label:before {
  border: 1px solid #737373;
  background-color: transparent;
}

