.mat-elevation-z8 {
    margin: 5vh 2vw 0 2vw;
}

.mat-header-row {
    min-height: 10vh;
}

.mat-column-Index {
    max-width: 10vh;
  }


.applyFilter button, .applyFilter button:focus {
    width: 15vh;
    min-height: 3.5vh;
    height: 4.5vh;
    padding: 0.3vh 0.6vw;
    box-shadow: 0.3vh 0.4vh 0.4vh 0px rgba(0, 0, 0, 0.28);
    border-left: 2vw solid #000;
    border-right: none;
    border-top: none;
    border-bottom: none;
    transition: width 2s;
    border-radius: 0.5vh;
    color: white;
}

.iconPositionLeft {
    left: 92.2vw !important;
    position: absolute;
}
.move-buttons .buttons {
    display: flex;
    justify-content: space-around;
    align-items: center;
    cursor: pointer;
    margin: 0.5em;
    width: 6vw;
    padding: 0.5em;
    border-radius: 0.3em;
    color: #fff;
    background: linear-gradient(45deg, rgba(29, 160, 79, 0.8), rgba(11, 89, 161, 0.8));
    outline: none;
    border: none;
    filter: drop-shadow(0px 5px 4px rgba(0, 0, 0, 0.5));
    opacity: .3;
}

.move-buttons .buttons.save {
    justify-content: center;
    opacity: 1;
    background: #0b5ed7;
}

.mat-header-cell {
    border-right: 1px solid #fff;
    background-color: #E7E7E7;
}

